<ScreenOne>:
    on_enter:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'dream.jpg'
    FloatLayout:
        pos: 0, 0
        size: root.width, root.height
        Label:
            text: 'Code of __ilprofessore'
            size_hint: 0.1, 0.1
            pos_hint: {'x': 0.439, 'y': 0.85}
            font_size: 50
            color: 1, 0, 0, 1
            bold: True
        Button:
            text: 'Encrypt'
            size_hint: 0.7, 0.2
            pos_hint: {'x': 0.15, 'y': 0.5}
            color: 1, 0, 0.5, 1
            font_size: 36
            bold: True
            on_release:
                root.switch_screen("'screen2'")
                root.click_sound
        Button:
            text: 'Decrypt'
            size_hint: 0.7, 0.2
            pos_hint: {'x': 0.15, 'y': 0.2}
            color: 1, 0, 0.5, 1
            font_size: 36
            bold: True
            on_release:
                root.switch_screen("'screen3'")
                root.click_sound
        Button:
            text: 'exit'
            size_hint: 0.5, 0.1
            pos_hint: {'x': 0.25, 'y': 0.05}
            font_size: 25
            color: 0, 0, 1, 1
            bold: True
            on_release:
                root.on_exit

<ScreenTwo>:
    on_enter: root.clear_field('encrypt_input')
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'dream.jpg'
    FloatLayout:
        pos: 0, 0
        size: root.width, root.height
        TextInput:
            id: encrypt_input
            hint_text: 'enter the text to be encrypted.\nno special characters allowed except for . and ,'
            size_hint: 0.9, 0.5
            pos_hint: {'x': 0.05, 'y': 0.45}
            font_size: 20
            text:
            readonly: True
        Button:
            pos_hint: {'x': 0.25, 'y': 0.27}
            size_hint: 0.5, 0.1
            text: 'Paste'
            color: 1, 0.5, 0.5, 1
            font_size: 20
            bold: True
            on_release:
                root.paste_text('encrypt_input')
                root.click_sound
        Button:
            pos_hint: {'x': 0.25, 'y': 0.17}
            size_hint: 0.5, 0.1
            text: 'Submit'
            color: 1, 0, 0.5, 1
            font_size: 20
            bold: True
            on_release:
                root.encrypt_decrypt_submit('encrypt')
                root.switch_screen("'screen4'")
                root.click_sound
        Button:
            pos_hint: {'x': 0.25, 'y': 0.07}
            size_hint: 0.5, 0.1
            text: 'Back'
            color: 1, 0, 0, 1
            font_size: 20
            bold: True
            on_release:
                root.switch_screen("'screen1'")
                root.click_sound

